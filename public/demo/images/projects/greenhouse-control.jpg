<svg width="400" height="300" viewBox="0 0 400 300" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="bg" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#10b981;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#059669;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="glass" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#ecfdf5;stop-opacity:0.8" />
      <stop offset="100%" style="stop-color:#d1fae5;stop-opacity:0.6" />
    </linearGradient>
  </defs>
  
  <!-- Background -->
  <rect width="400" height="300" fill="url(#bg)"/>
  
  <!-- Greenhouse structure -->
  <path d="M 80 200 L 80 120 L 200 80 L 320 120 L 320 200 Z" fill="url(#glass)" stroke="#374151" stroke-width="2"/>
  
  <!-- Greenhouse frame -->
  <line x1="80" y1="200" x2="80" y2="120" stroke="#6b7280" stroke-width="3"/>
  <line x1="80" y1="120" x2="200" y2="80" stroke="#6b7280" stroke-width="3"/>
  <line x1="200" y1="80" x2="320" y2="120" stroke="#6b7280" stroke-width="3"/>
  <line x1="320" y1="120" x2="320" y2="200" stroke="#6b7280" stroke-width="3"/>
  <line x1="200" y1="80" x2="200" y2="200" stroke="#6b7280" stroke-width="2"/>
  
  <!-- Plants inside -->
  <circle cx="120" cy="180" r="12" fill="#22c55e"/>
  <circle cx="150" cy="175" r="15" fill="#16a34a"/>
  <circle cx="180" cy="180" r="13" fill="#22c55e"/>
  <circle cx="220" cy="175" r="14" fill="#16a34a"/>
  <circle cx="250" cy="180" r="12" fill="#22c55e"/>
  <circle cx="280" cy="175" r="15" fill="#16a34a"/>
  
  <!-- Plant stems -->
  <line x1="120" y1="180" x2="120" y2="195" stroke="#15803d" stroke-width="2"/>
  <line x1="150" y1="175" x2="150" y2="195" stroke="#15803d" stroke-width="2"/>
  <line x1="180" y1="180" x2="180" y2="195" stroke="#15803d" stroke-width="2"/>
  <line x1="220" y1="175" x2="220" y2="195" stroke="#15803d" stroke-width="2"/>
  <line x1="250" y1="180" x2="250" y2="195" stroke="#15803d" stroke-width="2"/>
  <line x1="280" y1="175" x2="280" y2="195" stroke="#15803d" stroke-width="2"/>
  
  <!-- Ventilation fan -->
  <circle cx="300" cy="140" r="15" fill="#374151"/>
  <circle cx="300" cy="140" r="12" fill="#6b7280"/>
  <line x1="290" y1="130" x2="310" y2="150" stroke="#9ca3af" stroke-width="2"/>
  <line x1="310" y1="130" x2="290" y2="150" stroke="#9ca3af" stroke-width="2"/>
  
  <!-- Temperature/humidity sensor -->
  <rect x="100" y="120" width="20" height="30" fill="#f3f4f6" rx="10"/>
  <circle cx="110" cy="135" r="8" fill="#dc2626"/>
  
  <!-- ESP8266 controller -->
  <rect x="50" y="220" width="50" height="30" rx="5" fill="#1f2937"/>
  <rect x="55" y="225" width="40" height="20" rx="3" fill="#374151"/>
  
  <!-- Servo motor for window -->
  <rect x="270" y="110" width="20" height="15" fill="#4b5563" rx="3"/>
  <circle cx="280" cy="117" r="5" fill="#6b7280"/>
  
  <!-- Connection lines -->
  <line x1="100" y1="235" x2="110" y2="150" stroke="#ef4444" stroke-width="2"/>
  <line x1="100" y1="230" x2="280" y2="117" stroke="#3b82f6" stroke-width="2"/>
  <line x1="100" y1="225" x2="285" y2="140" stroke="#10b981" stroke-width="2"/>
  
  <!-- Temperature display -->
  <rect x="340" y="160" width="50" height="30" fill="#000000" rx="3"/>
  <text x="365" y="175" text-anchor="middle" font-family="monospace" font-size="8" fill="#00ff00">28°C</text>
  <text x="365" y="185" text-anchor="middle" font-family="monospace" font-size="8" fill="#00ff00">65%RH</text>
  
  <!-- Air flow indicators -->
  <path d="M 320 140 Q 340 135 360 140" stroke="#3b82f6" stroke-width="2" fill="none" opacity="0.7"/>
  <path d="M 320 145 Q 340 140 360 145" stroke="#3b82f6" stroke-width="2" fill="none" opacity="0.7"/>
  
  <!-- Title -->
  <text x="200" y="40" text-anchor="middle" font-family="Arial, sans-serif" font-size="18" font-weight="bold" fill="white">Greenhouse Control</text>
  <text x="200" y="60" text-anchor="middle" font-family="Arial, sans-serif" font-size="14" fill="white">ควบคุมเรือนกระจก</text>
</svg>