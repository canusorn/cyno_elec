  <circle cx="320" cy="60" r="4" fill="#f87171" opacity="0.7"/>
  
  <!-- Sensor device -->
  <rect x="150" y="150" width="100" height="80" rx="10" fill="#374151"/>
  <rect x="160" y="160" width="80" height="60" rx="5" fill="#1f2937"/>
  
  <!-- Display screen -->
  <rect x="170" y="170" width="60" height="40" rx="3" fill="#000000"/>
  <text x="200" y="185" text-anchor="middle" font-family="monospace" font-size="8" fill="#00ff00">PM2.5</text>
  <text x="200" y="195" text-anchor="middle" font-family="monospace" font-size="8" fill="#00ff00">45 μg/m³</text>
  <text x="200" y="205" text-anchor="middle" font-family="monospace" font-size="8" fill="#00ff00">UNHEALTHY</text>
  
