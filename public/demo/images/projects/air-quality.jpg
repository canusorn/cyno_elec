  <rect x="185" y="240" width="10" height="15" fill="#6b7280"/>
  <rect x="200" y="240" width="10" height="15" fill="#6b7280"/>
  <rect x="215" y="240" width="10" height="15" fill="#6b7280"/>
  <rect x="230" y="240" width="10" height="15" fill="#6b7280"/>
  <rect x="245" y="240" width="10" height="15" fill="#6b7280"/>
  
  <!-- ESP32 -->
  <rect x="50" y="200" width="60" height="40" rx="5" fill="#1f2937"/>
  <rect x="55" y="205" width="50" height="30" rx="3" fill="#374151"/>
  
  <!-- Connection -->
  <line x1="110" y1="220" x2="150" y2="190" stroke="#ef4444" stroke-width="2"/>
  
  <!-- Warning indicator -->
  <circle cx="350" cy="150" r="20" fill="#ef4444"/>
  <text x="350" y="158" text-anchor="middle" font-family="Arial, sans-serif" font-size="24" font-weight="bold" fill="white">!</text>
  
  <!-- Title -->
  <text x="200" y="40" text-anchor="middle" font-family="Arial, sans-serif" font-size="18" font-weight="bold" fill="white">Air Quality Monitor</text>
  <text x="200" y="60" text-anchor="middle" font-family="Arial, sans-serif" font-size="14" fill="white">ตรวจสอบคุณภาพอากาศ</text>
