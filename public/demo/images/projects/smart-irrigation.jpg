  <line x1="300" y1="230" x2="250" y2="200" stroke="#3b82f6" stroke-width="2"/>
  
  <!-- Title -->
  <text x="200" y="40" text-anchor="middle" font-family="Arial, sans-serif" font-size="18" font-weight="bold" fill="white">Smart Irrigation</text>
  <text x="200" y="60" text-anchor="middle" font-family="Arial, sans-serif" font-size="14" fill="white">ระบบรดน้ำอัตโนมัติ</text>
