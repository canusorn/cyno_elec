  </defs>
  
  <!-- Background -->
  <rect width="400" height="300" fill="url(#bg)"/>
  
  <!-- Plant pot -->
  <rect x="150" y="180" width="100" height="80" rx="10" fill="#8b4513"/>
  
  <!-- Plant -->
  <circle cx="175" cy="160" r="15" fill="#22c55e"/>
  <circle cx="200" cy="150" r="18" fill="#16a34a"/>
  <circle cx="225" cy="160" r="15" fill="#22c55e"/>
  
