<svg width="400" height="300" viewBox="0 0 400 300" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="bg" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#6b7280;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#374151;stop-opacity:1" />
    </linearGradient>
  </defs>
  
  <!-- Background -->
  <rect width="400" height="300" fill="url(#bg)"/>
  
  <!-- Factory building -->
  <rect x="50" y="120" width="300" height="120" fill="#1f2937" stroke="#374151" stroke-width="2"/>
  
  <!-- Roof -->
  <rect x="40" y="110" width="320" height="20" fill="#4b5563"/>
  
  <!-- Chimney -->
  <rect x="320" y="60" width="30" height="60" fill="#6b7280"/>
  
  <!-- Smoke -->
  <circle cx="330" cy="50" r="8" fill="#9ca3af" opacity="0.7"/>
  <circle cx="340" cy="40" r="6" fill="#9ca3af" opacity="0.5"/>
  <circle cx="345" cy="30" r="4" fill="#9ca3af" opacity="0.3"/>
  
  <!-- Industrial machine -->
  <rect x="120" y="160" width="80" height="60" fill="#374151" rx="5"/>
  <rect x="130" y="170" width="60" height="40" fill="#4b5563" rx="3"/>
  
  <!-- Machine components -->
  <circle cx="160" cy="190" r="15" fill="#6b7280"/>
  <circle cx="160" cy="190" r="10" fill="#9ca3af"/>
  
  <!-- Vibration lines -->
  <path d="M 140 150 Q 145 145 150 150 Q 155 155 160 150 Q 165 145 170 150" stroke="#ef4444" stroke-width="2" fill="none"/>
  <path d="M 140 155 Q 145 150 150 155 Q 155 160 160 155 Q 165 150 170 155" stroke="#ef4444" stroke-width="2" fill="none"/>
  
  <!-- Temperature sensor -->
  <rect x="220" y="180" width="15" height="30" fill="#dc2626" rx="7"/>
  <circle cx="227" cy="195" r="8" fill="#ef4444"/>
  
  <!-- ESP32 with LoRa -->
  <rect x="60" y="200" width="60" height="40" rx="5" fill="#1f2937"/>
  <rect x="65" y="205" width="50" height="30" rx="3" fill="#374151"/>
  <line x1="90" y1="200" x2="90" y2="180" stroke="#fbbf24" stroke-width="3"/>
  
  <!-- Monitoring dashboard -->
  <rect x="280" y="160" width="50" height="40" fill="#000000" rx="3"/>
  <rect x="285" y="165" width="40" height="30" fill="#1f2937" rx="2"/>
  
  <!-- Dashboard display -->
  <line x1="290" y1="175" x2="320" y2="175" stroke="#10b981" stroke-width="1"/>
  <line x1="290" y1="180" x2="315" y2="180" stroke="#fbbf24" stroke-width="1"/>
  <line x1="290" y1="185" x2="310" y2="185" stroke="#ef4444" stroke-width="1"/>
  
  <!-- Connection lines -->
  <line x1="120" y1="220" x2="160" y2="200" stroke="#3b82f6" stroke-width="2"/>
  <line x1="235" y1="195" x2="280" y2="180" stroke="#10b981" stroke-width="2"/>
  
  <!-- Warning indicators -->
  <circle cx="350" cy="50" r="12" fill="#fbbf24">
    <animate attributeName="opacity" values="1;0.5;1" dur="1.5s" repeatCount="indefinite"/>
  </circle>
  <text x="350" y="57" text-anchor="middle" font-family="Arial, sans-serif" font-size="16" font-weight="bold" fill="white">⚠</text>
  
  <!-- Title -->
  <text x="200" y="40" text-anchor="middle" font-family="Arial, sans-serif" font-size="18" font-weight="bold" fill="white">Industrial Monitoring</text>
  <text x="200" y="60" text-anchor="middle" font-family="Arial, sans-serif" font-size="14" fill="white">ตรวจสอบเครื่องจักรโรงงาน</text>
</svg>