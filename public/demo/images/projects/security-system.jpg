<svg width="400" height="300" viewBox="0 0 400 300" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="bg" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#dc2626;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#991b1b;stop-opacity:1" />
    </linearGradient>
    <radialGradient id="motion" cx="50%" cy="50%" r="50%">
      <stop offset="0%" style="stop-color:#fef3c7;stop-opacity:0.8" />
      <stop offset="100%" style="stop-color:#fbbf24;stop-opacity:0.2" />
    </radialGradient>
  </defs>
  
  <!-- Background -->
  <rect width="400" height="300" fill="url(#bg)"/>
  
  <!-- House -->
  <rect x="120" y="140" width="160" height="100" fill="#374151" stroke="#1f2937" stroke-width="2"/>
  <polygon points="120,140 200,80 280,140" fill="#7f1d1d" stroke="#991b1b" stroke-width="2"/>
  
  <!-- Door -->
  <rect x="180" y="190" width="40" height="50" fill="#8b4513" rx="3"/>
  
  <!-- Windows -->
  <rect x="140" y="160" width="30" height="30" fill="#1f2937" rx="3"/>
  <rect x="230" y="160" width="30" height="30" fill="#1f2937" rx="3"/>
  
  <!-- Security camera -->
  <circle cx="300" cy="120" r="15" fill="#1f2937"/>
  <circle cx="300" cy="120" r="10" fill="#374151"/>
  <circle cx="300" cy="120" r="6" fill="#000000"/>
  <rect x="285" y="115" width="30" height="10" fill="#6b7280"/>
  
  <!-- PIR sensor -->
  <rect x="80" y="180" width="20" height="30" rx="10" fill="#f3f4f6"/>
  <circle cx="90" cy="195" r="8" fill="#1f2937"/>
  
  <!-- Motion detection area -->
  <path d="M 90 195 L 150 160 L 150 220 Z" fill="url(#motion)" opacity="0.6"/>
  
  <!-- ESP32-CAM -->
  <rect x="50" y="220" width="60" height="40" rx="5" fill="#1f2937"/>
  <rect x="55" y="225" width="50" height="30" rx="3" fill="#374151"/>
  <circle cx="95" cy="235" r="5" fill="#000000"/>
  
  <!-- Alert indicator -->
  <circle cx="350" cy="50" r="20" fill="#ef4444" opacity="0.8">
    <animate attributeName="opacity" values="0.8;0.3;0.8" dur="1s" repeatCount="indefinite"/>
  </circle>
  <text x="350" y="58" text-anchor="middle" font-family="Arial, sans-serif" font-size="24" font-weight="bold" fill="white">!</text>
  
  <!-- Connection lines -->
  <line x1="100" y1="195" x2="120" y2="180" stroke="#10b981" stroke-width="2"/>
  <line x1="285" y1="120" x2="250" y2="140" stroke="#3b82f6" stroke-width="2"/>
  
  <!-- Title -->
  <text x="200" y="40" text-anchor="middle" font-family="Arial, sans-serif" font-size="18" font-weight="bold" fill="white">Security System</text>
  <text x="200" y="60" text-anchor="middle" font-family="Arial, sans-serif" font-size="14" fill="white">ระบบรักษาความปลอดภัย</text>
</svg>